
<div class="form-container">
  <form method="POST" action="{{languagePrefix}}/bots/add" id="edit-form">
    <div class="container">
      <h1>{{ i18n __ "pages.edit.title"}}</h1>
      <p>{{ i18n __ "pages.edit.required"}}</p>
    </div>
    <div class="ls-container">
      <h2>{{ i18n __ "pages.edit.basicinfo"}}</h2>
      <div class="row">
        <div class="one-half column">
          <label for="bot.id">{{ i18n __ "pages.edit.client_id.title"}}{{> required }}</label>
          <div class="ls-flex-row">
            <input id="id" name="bot.id" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.client_id.placeholder"}}" value="{{item.id}}">
            <button type="button" id="id-modal-button" onclick="openModal(this)" class="ls-button">{{ i18n __ "forms.help"}}</button>
          </div>
        </div>
        <div class="one-half column">
          <label for="bot.oauth">{{ i18n __ "pages.edit.application_id.title"}}</label>
          <div class="ls-flex-row">
            <input id="oauth" name="bot.oauth" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.application_id.placeholder"}}" value="{{item.oauth}}">
            <button type="button" id="oauth-modal-button" onclick="openModal(this)" class="ls-button">{{ i18n __ "forms.help"}}</button>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="one-half column">
          <label for="bot.invite">{{ i18n __ "pages.edit.invite.title"}}{{> required }}</label>
          <div class="ls-flex-row">
            <input id="invite" name="bot.invite" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.invite.title"}}" value="{{item.invite}}">
            <button type="button" id="invite-modal-button" onclick="openModal(this)" class="ls-button">{{ i18n __ "pages.edit.invite.generate"}}</button>
          </div>
        </div>
        <div class="one-half column">
          {{> listinput name="bot.authors[]" label="pages.edit.authors.title" placeholder="pages.edit.authors.placeholder" add="pages.edit.authors.add" modal="authors" value=item.authors default=user.id required=true}}
        </div>
      </div>
      <div class="row">
        <div class="one-half column">
          <label for="bot.support">{{ i18n __ "pages.edit.support.title"}}</label>
          <input name="bot.support" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.support.placeholder"}}" value="{{item.support}}">
        </div>
        <div class="one-half column">
          <label for="bot.category">{{ i18n __ "pages.edit.category.title"}}{{> required }}</label>
          <select name="bot.category" class="full-width" value="{{item.support}}">
            <option disabled {{#unless item.category}}selected{{/unless}}>{{ i18n __ "forms.select" }}</option>
            {{#each categories}}
              <option value={{this}} {{#if (isEqual this ../item.category)}}selected{{/if}}>{{ i18n ../__ (concat "categories." this) }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="row">
        <div class="one-half column">
          <label for="bot.website">{{ i18n __ "pages.edit.website.title"}}</label>
          <input name="bot.website" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.website.placeholder"}}" value="{{item.website}}">
        </div>
        <div class="one-half column">
          <label for="bot.nsfw">{{ i18n __ "pages.edit.nsfw.title"}}</label>
          <input name="bot.nsfw" type="checkbox" {{#if item.nsfw}}checked="on"{{/if}}>
        </div>
      </div>
    </div>
    <div class="ls-container">
      <h2>{{ i18n __ "pages.edit.images.title"}}</h2>
      <div class="row">
        <div class="one-half column">
          <label for="bot.images.avatar">{{ i18n __ "pages.edit.images.avatar.title"}}</label>
          <input name="bot.images.avatar" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.images.avatar.placeholder"}}" value="{{item.images.avatar}}">
        </div>
        <div class="one-half column">
          <label for="bot.images.cover">{{ i18n __ "pages.edit.images.cover.title"}}</label>
          <input name="bot.images.cover" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.images.cover.placeholder"}}" value="{{item.images.cover}}">
        </div>
      </div>
      <div class="row">
        <div class="one-half column">
          <label for="bot.videos.youtube">{{ i18n __ "pages.edit.youtube.title"}}</label>
          <span class="ls-no-wrap">
            youtube.com/watch?v=
          </span>
          <input name="bot.videos.youtube" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.youtube.placeholder"}}" value="{{item.videos.youtube}}">
        </div>
        <div class="one-half column">
          <label for="bot.videos.youku">{{ i18n __ "pages.edit.youku.title"}}</label>
          <span class="ls-no-wrap">
            v.youku.com/v_show/id_
          </span>
          <input name="bot.videos.youku" type="text" class="full-width no-margin" placeholder="{{ i18n __ "pages.edit.youku.placeholder"}}" value="{{item.videos.youku}}">
          <span class="ls-no-wrap">
            .html
          </span>
        </div>
      </div>
      {{> listinput name="bot.images.preview[]" label="pages.edit.images.preview.title" placeholder="pages.edit.images.preview.placeholder" add="pages.edit.images.preview.add" value=item.images.preview}}
    </div>
    <div class="ls-container">
      <h2>{{ i18n __ "pages.edit.triggermethods"}}</h2>
      {{> listinput name="bot.trigger.prefix[]" label="pages.edit.prefix.title" placeholder="pages.edit.prefix.placeholder" add="pages.edit.prefix.add" value=item.trigger.prefix required=true}}
      <div class="row">
        <div class="one-half column">
          <label for="bot.trigger.customisable">{{ i18n __ "pages.edit.customisable.title"}}</label>
          <input name="bot.trigger.customisable" type="checkbox" {{#if item.trigger.customisable}}checked="on"{{/if}}>
        </div>
        <div class="one-half column">
          <label for="bot.trigger.mentionable">{{ i18n __ "pages.edit.mentionable.title"}}</label>
          <input name="bot.trigger.mentionable" type="checkbox" {{#if item.trigger.mentionable}}checked="on"{{/if}}>
        </div>
      </div>
    </div>
    <div class="ls-container">
      <h2>{{ i18n __ "pages.edit.flags.title"}}</h2>
      <div class="row">
        <div class="one-half column">
          <label for="bot.flags.inAppPurchases">{{ i18n __ "pages.edit.flags.inAppPurchases.title"}}</label>
          <input name="bot.flags.inAppPurchases" type="checkbox" {{#if item.flags.inAppPurchases}}checked="on"{{/if}}>
          <small>{{ i18n __ "pages.edit.flags.inAppPurchases.small"}}</small>
        </div>
        <div class="one-half column">
          <label for="bot.flags.adverts">{{ i18n __ "pages.edit.flags.adverts.title"}}</label>
          <input name="bot.flags.adverts" type="checkbox" {{#if item.flags.adverts}}checked="on"{{/if}}>
          <small>{{ i18n __ "pages.edit.flags.adverts.small"}}</small>
        </div>
      </div>
    </div>
    <div class="ls-container">
      <h2>{{ i18n __ "pages.edit.sourcecode"}}</h2>
      <div class="row">
        <div class="one-half column">
          <label for="bot.github.owner">{{ i18n __ "pages.edit.github_owner.title"}}</label>
          <input name="bot.github.owner" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.github_owner.placeholder"}}" value="{{item.github.owner}}">
        </div>
        <div class="one-half column">
          <label for="bot.github.repo">{{ i18n __ "pages.edit.github_repo.title"}}</label>
          <input name="bot.github.repo" type="text" class="full-width" placeholder="{{ i18n __ "pages.edit.github_repo.placeholder"}}" value="{{item.github.repo}}">
        </div>
      </div>
    </div>
    <div class="ls-container">
      <h2>{{ i18n __ "pages.edit.information"}}</h2>
      <p>{{ i18n __ "pages.edit.languages.modal"}}</p>
      <div class="row">
        <div class="column">
          <label>{{ i18n __ "pages.edit.languages.title"}}{{> required }}</label>
          <div class="ls-flex-row">
            <select form="null" id="language" class="full-width">
              <option value="null" disabled selected>{{ i18n __ "forms.select" }}</option>
              {{#each selectableLanguages}}
                <option value="{{this}}">{{i18n ../__ (concat "locales." this)}}</option>
              {{/each}}
            </select>
            <button type="button" id="add-language-button" onclick="addLanguage(this)" class="ls-button">{{ i18n __ "pages.edit.languages.add"}}</button>
          </div>
        </div>
      </div>
    </div>
    <div id="languages-box" data-delete="{{i18n __ "pages.edit.deleteLanguage"}}" data-name="{{i18n __ "pages.edit.name.title"}}" data-description="{{i18n __ "pages.edit.description.title"}}" data-page="{{i18n __ "pages.edit.page.title"}}">
      {{#each item.contents}}
        <div class="ls-container github" data-title="{{i18n ../__ (concat "locales." @key)}}" id="{{@key}}">
          <div class="ls-flex-row">
            <h3>{{i18n ../__ (concat "locales." @key)}}</h3>
            <button type="button" onclick="deleteLanguage('{{@key}}')" class="ls-button">
              {{i18n ../__ "pages.edit.deleteLanguage"}}
            </button>
          </div>
          <label for="bot.contents.{{@key}}.name">{{i18n ../__ "pages.edit.name.title"}}</label>
          <input name="bot.contents.{{@key}}.name" type="text" class="full-width" value="{{this.name}}">
          <label for="bot.contents.{{@key}}.description">{{i18n ../__ "pages.edit.description.title"}}</label>
          <input name="bot.contents.{{@key}}.description" type="text" class="full-width" value="{{this.description}}">
          <label for="bot.contents.{{@key}}.page">{{i18n ../__ "pages.edit.page.title"}}</label>
          <textarea name="bot.contents.{{@key}}.page" id="bot.contents.{{@key}}.page" class="full-width ls-edit-page">{{this.page}}</textarea>
          <div class="ls-edit-monaco"></div>
        </div>
      {{/each}}
    </div>
    <div class="container">
      <button class="btn white-flat black-text">{{ i18n __ "forms.submit"}}</button>
    </div>
    <div class="ls-container secondary" id="form-message" data-wait="{{ i18n __ "forms.wait" }}">
      {{ i18n __ "pages.edit.updates"}}
    </div>
  </form>
</div>

